<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/table">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:text="Heart Rate"
                android:textSize="20sp"
                android:padding="15dp"/>

            <TextView
                android:id="@+id/hr"
                android:textSize="20sp"
                android:paddingLeft="15dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:text="Heart Rate Variability"
                android:textSize="20sp"
                android:padding="15dp"/>

            <TextView
                android:id="@+id/hrv"
                android:textSize="20sp"
                android:paddingLeft="15dp"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:text="Breathing Rate"
                android:textSize="20sp"
                android:padding="15dp"/>

            <TextView
                android:id="@+id/br"
                android:textSize="20sp"
                android:paddingLeft="15dp"/>

        </TableRow>

    </TableLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data successfully saved..."
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-test"
                android:textSize="12sp"
                android:id="@+id/retest_btn"
                android:padding="10dp"
                android:layout_toLeftOf="@+id/start_over_btn"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New patient"
                android:textSize="12sp"
                android:id="@+id/start_over_btn"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/samfierro/Documents/UROP%20D-LAB/PPGAnalyzer/app/src/main/res/layout/activity_analyze.xml -->